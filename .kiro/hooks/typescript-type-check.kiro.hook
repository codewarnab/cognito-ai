{
  "enabled": true,
  "name": "TypeScript Type Check",
  "description": "Runs pnpm type:check when any TypeScript or TSX file in the src folder is saved to catch type errors immediately",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  },
  "then": {
    "type": "runCommand",
    "command": "pnpm type:check"
  }
}